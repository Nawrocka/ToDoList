@model IEnumerable<ToDoList1.Models.ToDo>

<div id="progressBarToDo">
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: @Html.AttributeEncode((ViewBag.Percent))%"></div>
    </div>
</div>

<table class="table">  

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.IsDone)
                {
                    <div class="CompletedToDoItem">@Html.DisplayFor(modelItem => item.Description)</div>
                }
                else
                {@Html.DisplayFor(modelItem => item.Description)}
                <!-- tutaj dwa style dla tych co maja isDone=frue i tychz false-->
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.IsDone, new { id = item.Id, @class = "ActiveCheck" })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<script src="~/Custom_Scripts/AddCheckBoxListener.js"></script>